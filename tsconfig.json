{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "next/types": ["./src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["dist"]
}
